<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_size_small"
    android:background="@color/back_ground"
    tools:context=".LIBFragment.ProceedsFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_day_from"
            android:backgroundTint="@color/golden_yellow"
            android:text="Day From"
            android:elevation="@dimen/elevation_normal"
            android:layout_weight="0.7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/ed_day_from"
            android:fontFamily="@font/roboto_regular"
            android:hint="From..."
            android:textSize="@dimen/font_size_title"
            android:textColorHint="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/margin_size_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_day_to"
            android:backgroundTint="@color/golden_yellow"
            android:text="Day To"
            android:elevation="@dimen/elevation_normal"
            android:layout_weight="0.7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/ed_day_to"
            android:fontFamily="@font/roboto_regular"
            android:hint="To..."
            android:textSize="@dimen/font_size_title"
            android:textColorHint="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_get_proceeds"
        android:backgroundTint="@color/black"
        android:text="get Proceeds"
        android:layout_gravity="center"
        android:elevation="@dimen/elevation_normal"
        android:layout_marginTop="@dimen/margin_size_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/tv_result_proceeds"
        android:text="Result of Proceeds"
        android:textSize="@dimen/font_size_panel"
        android:textColor="@color/grey"
        android:gravity="center"
        android:layout_marginTop="56dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        android:elevation="@dimen/elevation_normal"
        app:cardCornerRadius="@dimen/corner_small"
        android:layout_marginBottom="@dimen/margin_size_tiny"
        app:contentPadding="@dimen/padding_size_tiny"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1.8"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_maTV"
                    android:fontFamily="@font/roboto_medium"
                    android:text="member Code"
                    android:textSize="@dimen/font_size_note"
                    android:textColor="@color/green"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_tenTV"
                        android:drawableLeft="@drawable/ic_baseline_person_pin"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Member name"
                        android:textSize="@dimen/font_size_title"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/margin_size_tiny"
                        android:drawablePadding="@dimen/padding_size_tiny"
                        android:layout_weight="1.6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <View
                        android:background="@color/green"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:id="@+id/tv_namSinh"
                        android:fontFamily="@font/roboto_regular"
                        android:text="YOB"
                        android:textSize="@dimen/font_size_title"
                        android:textColor="@color/black"
                        android:textStyle="italic"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/margin_size_tiny"
                        android:layout_marginRight="@dimen/margin_size_tiny"
                        android:layout_weight="0.4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/img_del"
                android:src="@drawable/ic_baseline_cancel"
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
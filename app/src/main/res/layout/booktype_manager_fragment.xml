<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_size_small"
    android:background="@color/back_ground"
    tools:context=".LIBFragment.BookTypeManagerFragment">


    <ListView
        android:id="@+id/lv_bookTypeManager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_create_new_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end|bottom"
        android:layout_marginRight="@dimen/margin_size_small"
        android:layout_marginBottom="@dimen/margin_size_small"
        android:backgroundTint="@color/white"
        android:elevation="6dp"
        android:src="@drawable/ic_baseline_cloud_upload"
        app:fabSize="normal" />



</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:elevation="@dimen/elevation_normal"
        android:layout_marginBottom="@dimen/margin_size_tiny"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_book_ticket_id"
                android:fontFamily="@font/roboto_medium"
                android:text="Book Ticket ID"
                android:textSize="@dimen/font_size_title"
                android:textColor="@color/green"
                android:padding="@dimen/padding_size_tiny"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:background="@color/green"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:background="@drawable/background_textview"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Customer"
                    android:textSize="@dimen/font_size_title"
                    android:textColor="@color/white"
                    android:padding="@dimen/padding_size_tiny"
                    android:layout_weight="0.8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_member_name"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Name of Customer"
                    android:textSize="@dimen/font_size_title"
                    android:textColor="@color/black"
                    android:padding="@dimen/padding_size_tiny"
                    android:layout_weight="1.2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:background="@drawable/background_textview"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Book"
                    android:textSize="@dimen/font_size_title"
                    android:textColor="@color/white"
                    android:padding="@dimen/padding_size_tiny"
                    android:layout_weight="0.8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_book_name"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Name of book"
                    android:textSize="@dimen/font_size_title"
                    android:textColor="@color/black"
                    android:padding="@dimen/padding_size_tiny"
                    android:layout_weight="1.2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:background="@drawable/background_textview"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Rental Hire"
                    android:textSize="@dimen/font_size_title"
                    android:textColor="@color/white"
                    android:padding="@dimen/padding_size_tiny"
                    android:layout_weight="0.8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_price"
                    android:fontFamily="@font/roboto_regular"
                    android:text="0.000.000"
                    android:textSize="@dimen/font_size_title"
                    android:textColor="@color/black"
                    android:padding="@dimen/padding_size_tiny"
                    android:layout_weight="1.2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:background="@drawable/background_textview"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Rental Day"
                    android:textSize="@dimen/font_size_title"
                    android:textColor="@color/white"
                    android:padding="@dimen/padding_size_tiny"
                    android:layout_weight="0.8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_day"
                    android:fontFamily="@font/roboto_regular"
                    android:text="00-00-0000"
                    android:textSize="@dimen/font_size_title"
                    android:textColor="@color/black"
                    android:padding="@dimen/padding_size_tiny"
                    android:layout_weight="1.2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:background="@drawable/background_textview"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Return book"
                    android:textSize="@dimen/font_size_title"
                    android:textColor="@color/white"
                    android:padding="@dimen/padding_size_tiny"
                    android:layout_weight="0.8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_book_return"
                    android:fontFamily="@font/roboto_regular"
                    android:text="No return"
                    android:textSize="@dimen/font_size_title"
                    android:textColor="@color/black"
                    android:padding="@dimen/padding_size_tiny"
                    android:layout_weight="1.2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_size_tiny"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_fix"
                android:src="@drawable/ic_baseline_create"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/empty_icon_height_small"/>


            <ImageView
                android:id="@+id/img_del"
                android:src="@drawable/ic_baseline_cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/empty_icon_height_small" />
        </LinearLayout>
    </LinearLayout>




    </LinearLayout>
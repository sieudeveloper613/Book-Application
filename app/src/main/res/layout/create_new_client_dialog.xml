<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/back_ground"
    android:orientation="vertical"
    android:padding="@dimen/padding_size_small"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_client_id"
        android:background="@drawable/back_ground_input"
        android:fontFamily="@font/roboto_medium"
        android:text="ID of client"
        android:textSize="@dimen/font_size_content"
        android:textColor="@color/black"
        android:elevation="@dimen/elevation_normal"
        android:layout_marginBottom="@dimen/margin_size_small"
        android:padding="@dimen/padding_size_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/ed_client_name"
        android:background="@drawable/back_ground_input"
        android:fontFamily="@font/roboto_regular"
        android:hint="name of client"
        android:textColorHint="@color/grey"
        android:textSize="@dimen/font_size_content"
        android:textColor="@color/black"
        android:elevation="@dimen/elevation_normal"
        android:layout_marginBottom="@dimen/margin_size_small"
        android:padding="@dimen/padding_size_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/ed_client_date_of_birth"
        android:background="@drawable/back_ground_input"
        android:fontFamily="@font/roboto_regular"
        android:hint="Date of birth"
        android:textColorHint="@color/grey"
        android:textSize="@dimen/font_size_content"
        android:textColor="@color/black"
        android:elevation="@dimen/elevation_normal"
        android:layout_marginBottom="@dimen/margin_size_small"
        android:padding="@dimen/padding_size_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_large">

        <Button
            android:id="@+id/btn_create_client"
            android:backgroundTint="@color/golden_yellow"
            android:text="Create"
            android:textSize="@dimen/font_size_title"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:padding="@dimen/padding_size_tiny"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_cancel_client"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:text="Cancel"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_title"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_size_tiny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
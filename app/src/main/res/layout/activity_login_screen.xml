<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    android:background="@color/back_ground"
    tools:context=".LoginScreen">

    <ImageView
        android:layout_gravity="center"
        android:src="@drawable/book_logo_library"
        android:layout_marginTop="@dimen/margin_size_medium"
        android:layout_width="@dimen/empty_icon_width_large"
        android:layout_height="@dimen/empty_icon_height_large"/>

    <TextView
        android:fontFamily="@font/tuv_noh_carbone"
        android:text="Phuong nam"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_panel"
        android:textAllCaps="true"
        android:letterSpacing="0.1"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_size_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:fontFamily="@font/tuv_noh_carbone"
        android:text="Library"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_panel"
        android:textAllCaps="true"
        android:letterSpacing="0.1"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_size_tiny"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_size_medium">

        <EditText
            android:id="@+id/ed_account"
            android:fontFamily="@font/roboto_regular"
            android:hint="Your account"
            android:textColorHint="@color/grey"
            android:textSize="@dimen/font_size_content"
            android:textColor="@color/black"
            android:background="@drawable/back_ground_input"
            android:padding="@dimen/padding_size_small"
            android:elevation="@dimen/elevation_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/ed_password"
            android:fontFamily="@font/roboto_regular"
            android:hint="Your password"
            android:textColorHint="@color/grey"
            android:textSize="@dimen/font_size_content"
            android:textColor="@color/black"
            android:background="@drawable/back_ground_input"
            android:padding="@dimen/padding_size_small"
            android:elevation="@dimen/elevation_normal"
            android:inputType="textPassword"
            android:layout_marginTop="@dimen/margin_size_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:id="@+id/cb_savePassword"
            android:fontFamily="@font/roboto_regular"
            android:text="Save password"
            android:textColor="@color/black"
            android:buttonTint="@color/green"
            android:textSize="@dimen/font_size_note"
            android:layout_marginTop="@dimen/margin_size_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_login"
            android:backgroundTint="@color/green"
            android:fontFamily="@font/roboto_bold"
            android:text="Sign In"
            android:textSize="@dimen/font_size_title"
            android:textAllCaps="false"
            android:padding="@dimen/padding_size_tiny"
            android:layout_marginTop="@dimen/margin_size_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_size_large">
        <TextView
            android:fontFamily="@font/roboto_regular"
            android:text="Design and Develop by"
            android:textSize="@dimen/font_size_note"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:fontFamily="@font/roboto_medium"
            android:text="Superior Ha"
            android:textSize="@dimen/font_size_title"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
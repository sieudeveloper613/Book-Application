<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        android:elevation="@dimen/elevation_normal"
        app:cardCornerRadius="@dimen/corner_small"
        android:layout_marginBottom="@dimen/margin_size_tiny"
        app:contentPadding="@dimen/padding_size_tiny"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/tv_book_id"
                android:fontFamily="@font/roboto_bold"
                android:text="ID"
                android:textSize="@dimen/font_size_panel"
                android:textColor="@color/golden_yellow"
                android:gravity="center"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.2"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_name_of_book"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Name of book"
                    android:textSize="@dimen/font_size_title"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:id="@+id/tv_category_of_book"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Category of book"
                    android:textSize="@dimen/font_size_content"
                    android:textColor="@color/black"
                    android:textStyle="italic"
                    android:layout_marginTop="@dimen/margin_size_tiny"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_giaThue"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Rental Hire"
                    android:textSize="@dimen/font_size_content"
                    android:textColor="@color/red"
                    android:layout_marginTop="@dimen/margin_size_tiny"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/img_delete_book"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:src="@drawable/ic_baseline_cancel"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:fitsSystemWindows="true"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:background="@color/golden_yellow">

    <ImageView
        android:id="@+id/view_user"
        android:layout_width="@dimen/empty_icon_width_large"
        android:layout_height="@dimen/empty_icon_height_large"
        android:layout_margin="@dimen/margin_size_medium"
        android:src="@drawable/avatar_book"
        />

    <TextView
        android:id="@+id/tv_user"
        android:text="Username"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_title"
        android:layout_marginLeft="@dimen/margin_size_medium"
        android:layout_marginBottom="@dimen/margin_size_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>




</LinearLayout>